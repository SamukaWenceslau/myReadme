<%- include("./partials/header.ejs") %>
<%- include("./partials/navbar.ejs") %>

        <main>
            <div class="container">
                <% if (files.length !==0) { %>
                    <h3>Lixeira</h3>

                    <div class="row justify-content-center mt-5">
                        <% files.forEach(file=> { %>
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-8 col-12 my-3">
                                <div class="card shadow">
                                    <div class="card-body">
                                        
                                            <h5 class="card-title">
                                                <%= file.filename %>
                                            </h5>

                                            <h6 class="text-secondary"><i class="fas fa-folder"></i>
                                                <%= file.folder.name %>
                                            </h6>
                                            <p class="text-date my-4">
                                                <%= file.date_post %>
                                            </p>
                                        

                                        <form action="/file/restore" method="POST">

                                            <input type="hidden" name="id" value="<%= file.id %>">

                                            <button class="btn btn-primary mt-4" type="submit"><i class="fas fa-undo-alt"></i> Restaurar</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                            <% }) %>

                    </div>

                    <% } else { %>

                        <div class="row justify-content-center mt-5">
                            <div class="col">
                                <img src="/images/icon-notfound.svg" class="img-fluid  d-block mx-auto notfound"
                                    alt="icon-notfound">

                                <h5 class="text-center font-weight-bold my-4">Sua lixeira est√° limpa</h5>

                            </div>
                        </div>
                        <% } %>
            </div>
        </main>

        <a href="/file" class="btn-plus"><i class="fas fa-plus mt-3"></i></a>

<%- include("./partials/modal.ejs") %>
<script src="/javascripts/delete.js"></script>
<%- include("./partials/footer.ejs") %>