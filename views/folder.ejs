<%- include("./partials/header.ejs") %>
<%- include("./partials/navbar.ejs") %>

<main>
  <div class="container">
      <h3><i class="fas fa-folder"></i> <%= title %> </h3>
      <% if (files.length !== 0) { %>

        <div class="row mt-5">
            <% files.forEach(file => { %>
                <div class="col-3">
                    <div class="card shadow">
                        <div class="card-body">
                            <a href="/file/<%= file.slug %> " class="card-link">
                                <h5 class="card-title"><%= file.filename %> </h5>
      
                                
                                <p class="text-date my-4"><%= file.date_post %> </p>
                            </a>
      
                            <button class="btn btn-danger mt-4" type="submit"><i class="fas fa-trash"></i></button>
      
                        </div>
      
                    </div>
                </div> 
            <% }) %>
        </div>

       <% } else { %>
        
        <div class="row justify-content-center mt-5">
            <div class="col-6">
                <img src="/images/icon-notfound.svg" class="img-fluid w-50 d-block mx-auto" alt="icon-notfound">

                <h5 class="text-center font-weight-bold my-5">Não há arquivos nessa pasta</h5>

            </div>
        </div>
      <% } %>
  </div>
</main>

<a href="/file" class="btn-plus"><i class="fas fa-plus mt-3"></i></a>

<%- include("./partials/modal.ejs") %> 
<%- include("./partials/footer.ejs") %>

